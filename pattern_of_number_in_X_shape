#include <stdio.h>

int main()
{
    int num;       //initializing variable num
    printf("Enter the number:"); //ask user for the input
    scanf("%d",&num);
    for(int i=1;i<=num;i++)     //start a loop for row
    {
        for(int j=1;j<=num;j++)  //start a loop for coloumn
        {
            if(i==j || (i+j==num+1))  //check the conditions
            {
                printf("%d",j);
            }
            else
            {
                printf(" ");
            }

        }
        printf("\n");
    }

return 0;
}
