/* program to print a pattern with 0 and 1*/
#include <stdio.h>

int main()
{
    int n=5;
    for(int i=1;i<=5;i++)
    {
        for(int j=1;j<=n-i;j++)
        {
           printf("  ");
        }
        for(int k=1;k<=i;k++)
        {
            printf("%d ",k%2);
        }
        printf("\n");
    }
   /* for(int i=1;i<=n-1;i++)
    {
        for(int j=1;j<=n-i;j++)
        {
            printf("_ ");
        }
        printf("\n");
    }*/
return 0;


}
